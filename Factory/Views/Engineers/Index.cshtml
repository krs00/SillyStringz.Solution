@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>All Engineers!</h1>
<br>

@if (@Model.Count == 0)
{
    <br>
    <h3>There are no Engineers at the factory!</h3>
    <br>
}
else
{
    <ul>
    @foreach (Engineer engineer in Model)
        {
            <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</li>
        }
    </ul>
}

<br>
<br>
<p>@Html.ActionLink("Add Engineer", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>