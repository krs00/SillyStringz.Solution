@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>All Machines!</h1>
<br>

@if (@Model.Count == 0)
{
    <br>
    <h3>No machines currently need repair!</h3>
    <br>
}
else
{
    <ul>
    @foreach (Machine machine in Model)
        {
            <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId})</li>
        }
    </ul>
}

<br>
<br>
<p>@Html.ActionLink("Add Machine", "Create")</p>
<p>@Html.ActionLink("Back To Home", "Index", "Home")</p>