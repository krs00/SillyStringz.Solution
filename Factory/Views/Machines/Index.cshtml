@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>All Machines!</h1>

@if (@Model.Count == 0)
{
    <h3>No machines currently need repair!</h3>
}
else
{
    <ul>
    @foreach (Machine machine in Model)
        {
            <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId})</li>
        }
    </ul>
}

<p>@Html.ActionLink("Add Machine", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>